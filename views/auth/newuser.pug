extends ../form.pug 

block form
  div(class="form-group")
    div(class="email input-group input-group-lg row")
      input(type="text",class="form-control",name="address",placeholder="Email")
      div(class="input-group-append")
        span(class="input-group-text") @
      input(type="text",class="form-control col-3",name="postfix",placeholder=".com")
  div(class="form-group")
    div(class="name input-group input-group-lg row")
      input(type="text",class="form-control",name="username",placeholder="Nickname")
  div(class="row justify-content-center")
    button(id="submit",type="button",class="col-xs-10 col-md-6 col-lg-3 btn btn-primary col center-block",style="font-size:1.5rem;") Sign up
block append script
  script(src="/newuser.js")
