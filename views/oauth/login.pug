extends ../form.pug 

block form
  div(class="form-group")
    div(class="email input-group input-group-lg row")
      input(type="text",class="form-control",name="email",placeholder="Email/Username")
  div(class="form-group")
    div(class="password input-group input-group-lg row")
      input(type="password",class="form-control",name="password",placeholder="Password")
  div(class="row justify-content-center")
    button(id="submit",type="submit",class="col-xs-10 col-md-6 col-lg-3 btn btn-primary col center-block",style="font-size:1.5rem;") Log in
block append script
  script(src="/login.js")
